                      <li>To add new employee, simply click the 'New' button.</li>
                    </ul>
                  </li>
                </ol>

              <!-- Table with stripped rows -->

<!-- The below table and for loop where adapted from the starter code. -->

              <article>
                <table class="table table-striped datatable table-hover">
                  <thead>
                    <tr>
                        <!-- Iterate through each key in the first entry to get the
                        column name -->
                        {% for key in employees[0].keys() %}
                
                        <!-- Create a <th> tag with the key inside of it, this will be
                        our header row -->
                        <th>{{ key }}</th>
                
                        <!-- End of this for loop -->
                        {% endfor %}
                        <th scope="col">Actions</th>
                    </tr>
                    <tbody>
                
                    <!-- Now, iterate through every employee in employees -->
                    {% for employee in employees %}
                    <tr>
                        <!-- Then iterate through every key in the current employee dictionary -->
                        {% for key in employee.keys() %}
                
                        <!-- Create a <td> element with the value of that key in it -->
                        <td>{{employee[key]}}</td>
                        {% endfor %}
                        <td>
                        <a href="{{ url_for('employees_update', employee_id=employee['Employee ID']) }}" class="edit">
                          <i class="material-icons" data-toggle="tooltip" title="Edit">&#xE254;</i>
                          </a>
                        <a href="{{ url_for('delete_employee', employee_id=employee['Employee ID']) }}" class="delete">
                          <i class="material-icons" title="Delete">&#xE872;</i>
                          </a>
                        </td>
                    </tr>
                    {% endfor %}
                  </tbody>
              </table>
            </article>
